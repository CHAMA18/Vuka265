rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if true;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /hobbies/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /notifications/{document} {
      allow create: if request.resource.data.User == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if resource.data.User == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /socialprofiles/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /socialprofiles/{parent}/socialplatforms/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /{path=**}/socialplatforms/{document} {
      allow read: if true;
    }


    match /swipes/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /subscriptions/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /preferences/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /users/{parent}/liked/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if request.auth.uid == parent;
      allow write: if request.auth.uid == parent;
      allow delete: if request.auth.uid == parent;
    }

    match /BlockedList/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /chats/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /chats/{parent}/messages/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /{path=**}/messages/{document} {
      allow read: if true;
    }

    match /device_sessions/{document} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    // Payment transactions - users can only read their own transactions
    // Write operations are handled by Cloud Functions with admin privileges
    match /payment_transactions/{document} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if false; // Only Cloud Functions can create
      allow write: if false;  // Only Cloud Functions can write
      allow delete: if false; // Never delete payment records
    }

  }
}
